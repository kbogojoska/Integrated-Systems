@model List<AdminApplication.Models.Order>

<div class="container">

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customer</th>
                <th scope="col">Number of products</th>

                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.Owner?.UserName</td>
                    <td>@item.ProductInOrders?.Count</td>
                    <td><a class="btn btn-outline-secondary" asp-action="Details" asp-route-orderId="@item.Id">Details</a></td>
                </tr>

            }
        </tbody>


    </table>

</div>